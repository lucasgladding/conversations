<!DOCTYPE html>
<html>
<head>
  <title>Conversations</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="site-name"><%= link_to 'Conversations', root_path %></div>

<% if current_user %>
  <div id="welcome">Logged in as <%= current_user %></div>
<% end %>

<ul id="user" class="horizontal">
  <li><%= link_to 'Register', new_register_path %></li>
  <li><%= link_to 'Login', login_path %></li>
  <% if current_user %>
    <li><%= link_to 'Logout', logout_path %></li>
  <% end %>
</ul>

<ul id="navigation" class="horizontal">
  <li><%= link_to 'Conversations', conversations_path %></li>
  <li><%= link_to 'Messages', messages_path %></li>
  <li><%= link_to 'Users', users_path %></li>
</ul>

<% if alert %>
  <div id="alert"><%= alert %></div>
<% end %>

<% if notice %>
  <div id="notice"><%= notice %></div>
<% end %>

<%= yield %>

</body>
</html>
